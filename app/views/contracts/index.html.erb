<h1>Contracts</h1>
<table>
	<thead>
		<tr>
			<th>Dated</th>
			<!-- <th>Contact person</th> -->
			<!-- <th>Phone number</th> -->
			<th>People</th>
			<th>Service from</th>
			<th>Service to</th>
			<th>Preferred date</th>
			<th>Preferred time</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<% @contracts.each do |contract| %>
			<td><%= contract.date %></td>
			<td><%= contract.people %></td>
			<td><%= contract.service_from %></td>
			<td><%= contract.service_to %></td>
			<td><%= contract.preferred_date %></td>
			<td><%= contract.preferred_time %></td>
			<td><%= link_to 'Show', contract %></td>
			<td>
                <%= link_to 'Edit', edit_contract_path(contract) %>
            </td>
            <td>
                <%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
			<% end %>
		</tr>
	</tbody>
</table>
<%= link_to 'New', new_contract_path %>